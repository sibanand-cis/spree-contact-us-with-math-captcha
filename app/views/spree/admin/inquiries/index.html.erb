<h1><%= t("listing_inquiries") %></h1>
<h4><%= t(:admin_header_message) %></h4>

<table class="index">
    <thead>
    <tr>
      <div data-hook="admin_inquiries_index_headers">
        <th><%#= sort_link [:spree_contact_us, :admin, @search], :email, t("inquiry") %></th>
        <th>
          <%#= hook :admin_inquiries_index_header_actions %>
          <div data-hook="admin_inquiries_index_header_actions"></div>
        </th>
      </div>
    </tr>
    </thead>
    <tbody>
    <% @inquiries.each do |inquiry| %>
        <tr id="<%= dom_id inquiry %>">
          <%- locals = {:inquiry => inquiry} %>
          <div data-hook="admin_inquiries_index_rows">
          <%#= hook :admin_inquiries_index_rows, locals do %>
            <td width="350px"><%= link_to inquiry.email, object_url(inquiry) %></td>
          <%# end %>
          </div>
          <td>
            <div data-hook="admin_inquiries_index_row_actions">
            <%#= hook :admin_inquiries_index_row_actions, locals do %>
                <%= link_to t(:display), object_url(inquiry) %> &nbsp;
                <%= link_to_delete inquiry %>
            <%# end %>
            </div>
          </td>
        </tr>
    <% end %>
    </tbody>
</table>

<%= paginate(@inquiries, :previous_label => "&#171; #{t('previous')}", :next_label => "#{t('next')} &#187;") %>


<% content_for :sidebar do %>
    <div class="box">
        <h3><%= t(:search) %></h3>
        <%= form_for(@search ,:url => admin_inquiries_path,:method => :get) do |f| %>
            <%- locals = {:f => f} %>
            <div data-hook="admin_inquiries_index_search">
            <%#= hook :admin_inquiries_index_search, locals do %>
                <p>
                    <%= t("email") %><br/>
                    <%= f.text_field :email_cont, :size=>18 %>
                </p>
            <%# end %>
            </div>
            <%#= hook :admin_inquiries_index_search_buttons, locals do %>
            <div data-hook="admin_inquiries_index_search_buttons">
              <p><%= button t("search") %></p>
            </div>
            <%# end %>
        <% end %>
    </div>
<% end %>
